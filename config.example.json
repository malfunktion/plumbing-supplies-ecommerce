{
  "app": {
    "name": "Plumbing Supplies E-Commerce",
    "baseUrl": "/"
  },
  "database": {
    "type": "choose-provider",
    "providers": {
      "mongodb": {
        "type": "mongodb-atlas",
        "description": "Free tier: 512MB storage, shared clusters",
        "connectionString": "MONGODB_URI",
        "options": {
          "useNewUrlParser": true,
          "useUnifiedTopology": true
        }
      },
      "supabase": {
        "type": "postgresql",
        "description": "Free tier: 500MB storage, 50MB backups",
        "url": "SUPABASE_URL",
        "apiKey": "SUPABASE_API_KEY",
        "options": {
          "ssl": true
        }
      },
      "firebase": {
        "type": "firestore",
        "description": "Free tier: 1GB storage, 50K reads/day, 20K writes/day",
        "config": {
          "projectId": "FIREBASE_PROJECT_ID",
          "privateKey": "FIREBASE_PRIVATE_KEY",
          "clientEmail": "FIREBASE_CLIENT_EMAIL"
        }
      },
      "planetscale": {
        "type": "mysql",
        "description": "Free tier: 5GB storage, 1B row reads/month",
        "url": "PLANETSCALE_URL",
        "username": "PLANETSCALE_USERNAME",
        "password": "PLANETSCALE_PASSWORD"
      }
    }
  },
  "hosting": {
    "type": "choose-provider",
    "providers": {
      "netlify": {
        "type": "netlify",
        "description": "Free tier: Unlimited sites, 100GB bandwidth/month",
        "token": "NETLIFY_AUTH_TOKEN",
        "siteId": "NETLIFY_SITE_ID",
        "features": ["automatic-deploys", "ssl", "cdn"]
      },
      "vercel": {
        "type": "vercel",
        "description": "Free tier: 100GB bandwidth/month, serverless functions",
        "token": "VERCEL_TOKEN",
        "projectId": "VERCEL_PROJECT_ID",
        "features": ["edge-functions", "analytics", "ssl"]
      },
      "firebase": {
        "type": "firebase-hosting",
        "description": "Free tier: 10GB storage, 360MB/day downloads",
        "projectId": "FIREBASE_PROJECT_ID",
        "features": ["ssl", "cdn", "dynamic-content"]
      },
      "githubPages": {
        "type": "git",
        "description": "Free tier: Unlimited sites, 100GB bandwidth/month",
        "repository": "GITHUB_REPO",
        "branch": "gh-pages",
        "token": "GITHUB_TOKEN"
      },
      "render": {
        "type": "render",
        "description": "Free tier: Static sites, automatic deploys",
        "token": "RENDER_TOKEN",
        "serviceId": "RENDER_SERVICE_ID",
        "features": ["ssl", "cdn", "auto-deploy"]
      }
    }
  },
  "auth": {
    "type": "choose-provider",
    "providers": {
      "supabase": {
        "type": "supabase-auth",
        "description": "Free tier: Unlimited users, social providers",
        "url": "SUPABASE_URL",
        "anonKey": "SUPABASE_ANON_KEY",
        "serviceKey": "SUPABASE_SERVICE_KEY",
        "providers": ["google", "github", "facebook"]
      },
      "firebase": {
        "type": "firebase-auth",
        "description": "Free tier: Unlimited users, multiple providers",
        "projectId": "FIREBASE_PROJECT_ID",
        "apiKey": "FIREBASE_API_KEY",
        "providers": ["google", "github", "facebook", "twitter"]
      },
      "auth0": {
        "type": "auth0",
        "description": "Free tier: 7,000 active users, social connections",
        "domain": "AUTH0_DOMAIN",
        "clientId": "AUTH0_CLIENT_ID",
        "clientSecret": "AUTH0_CLIENT_SECRET",
        "providers": ["google", "github", "facebook"]
      },
      "clerk": {
        "type": "clerk",
        "description": "Free tier: 5,000 active users, social providers",
        "publishableKey": "CLERK_PUBLISHABLE_KEY",
        "secretKey": "CLERK_SECRET_KEY",
        "providers": ["google", "github", "facebook"]
      }
    }
  },
  "api": {
    "baseUrl": "API_BASE_URL",
    "timeout": 30000
  },
  "storage": {
    "type": "choose-provider",
    "providers": {
      "supabaseStorage": {
        "type": "supabase-storage",
        "description": "Free tier: 1GB storage",
        "url": "SUPABASE_URL",
        "apiKey": "SUPABASE_API_KEY"
      },
      "firebaseStorage": {
        "type": "firebase-storage",
        "description": "Free tier: 5GB storage",
        "projectId": "FIREBASE_PROJECT_ID",
        "bucket": "FIREBASE_STORAGE_BUCKET"
      },
      "cloudinary": {
        "type": "cloudinary",
        "description": "Free tier: 25 credits/month, ~25GB storage",
        "cloudName": "CLOUDINARY_CLOUD_NAME",
        "apiKey": "CLOUDINARY_API_KEY",
        "apiSecret": "CLOUDINARY_API_SECRET"
      }
    }
  }
}
